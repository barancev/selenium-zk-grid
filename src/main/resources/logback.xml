<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{0} - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="ru.stqa.selenium" level="INFO" />

  <root level="OFF">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>